<Window x:Class="TwitchChatOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchChatOverlay"
        mc:Ignorable="d"
        Title="Twitch Chat Overlay" 
        Icon="icon.ico"
        Height="600" 
        Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Left="10"
        Top="10"
        ShowInTaskbar="True"
        ResizeMode="CanResizeWithGrip"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded"
        SourceInitialized="Window_SourceInitialized"
        Closing="Window_Closing">
    
    <Window.Resources>
        <!-- Button style for header buttons -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Margin="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <!-- Main container -->
    <Grid x:Name="MainGrid">
        <!-- Overlay background (with adjustable opacity) -->
        <Border x:Name="OverlayBackground"
                Background="#80000000" 
                CornerRadius="10" 
                Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header with controls -->
                <Grid x:Name="HeaderBar" 
                      Grid.Row="0" 
                      Background="#CC6441A5"
                      Height="40"
                      MouseLeftButtonDown="HeaderBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Channel name -->
                    <TextBlock x:Name="ChannelNameText"
                               Grid.Column="0"
                               Text="Twitch Chat Overlay"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                    
                    <!-- Control buttons -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0">
                        
                        <!-- Settings button -->
                        <Button x:Name="BtnSettings"
                                Content="⚙"
                                Style="{StaticResource HeaderButtonStyle}"
                                Click="BtnSettings_Click"
                                ToolTip="Open Settings"/>
                        
                        <!-- Toggle borders button -->
                        <Button x:Name="BtnToggleBorders"
                                Content="○"
                                Style="{StaticResource HeaderButtonStyle}"
                                Click="BtnToggleBorders_Click"
                                ToolTip="Hide Borders (Overlay Mode)"/>
                        
                        <!-- Close button -->
                        <Button x:Name="BtnClose"
                                Content="✕"
                                Click="BtnClose_Click"
                                ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#CCFF0000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <!-- Chat messages area -->
                <ScrollViewer Grid.Row="1" 
                              x:Name="ChatScroll"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="10,5,10,5">
                    <ItemsControl x:Name="ChatMessages">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" 
                                           Margin="0,3,0,3"
                                           Foreground="White"
                                           FontSize="13">
                                    <Run Text="{Binding Username}" 
                                         FontWeight="Bold" 
                                         Foreground="#FF9146FF"/>
                                    <Run Text=": " Foreground="#FFCCCCCC"/>
                                    <Run Text="{Binding Message}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Footer with status info -->
                <Grid x:Name="FooterBar" 
                      Grid.Row="2" 
                      Background="#CC1F1F23"
                      Height="25">
                    <TextBlock x:Name="StatusText"
                               Text="Ready"
                               Foreground="#FFAAAAAA"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Context Menu -->
        <Grid.ContextMenu>
            <ContextMenu x:Name="WindowContextMenu">
                <MenuItem Header="Toggle Borders" Click="MenuItem_ToggleBorders_Click"/>
                <MenuItem Header="Settings" Click="MenuItem_Settings_Click"/>
                <Separator/>
                <MenuItem Header="Opacity">
                    <MenuItem Header="Increase Opacity" Click="MenuItem_IncreaseOpacity_Click"/>
                    <MenuItem Header="Decrease Opacity" Click="MenuItem_DecreaseOpacity_Click"/>
                    <MenuItem Header="Reset Opacity" Click="MenuItem_ResetOpacity_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Reset Window Position" Click="MenuItem_ResetPosition_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuItem_Exit_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>
